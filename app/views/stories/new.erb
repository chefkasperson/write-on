<h3>Create a New Story</h3>

<form action="/stories" method="post">
  <label for="title">Title: </label>
  <input type="text" name="story[title]" id="title"><br><br>
  <label for="jam_selector">Choose Jam: </label>
    <% @open_jams.each do |jam| %>
     <h5><input type="radio" name="story[jam_id]" value="<%= jam.id %>"\><%= jam.name %></h5>
    <% end %>
    <br>
  <label for="content">Begin Writing: </label><br>
  <textarea rows="25" cols="70" name="story[content]" id="content" placeholder="blah blah blah"></textarea><br>
  <input type="checkbox" name="story[published?]" value="true" id="publish">
  <label for="publish">Publish Story</label><br>
  <input type="submit" value="Submit">
</form>